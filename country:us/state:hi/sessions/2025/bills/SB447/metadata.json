{
  "legislative_session": "2025",
  "identifier": "SB447",
  "title": "RELATING TO A DEPARTMENT OF HEALTH PILOT PROGRAM.",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [
    "DOH",
    "Department of Human Resources Development",
    "Hiring Pilot Program",
    "Reports"
  ],
  "abstracts": [
    {
      "note": "description",
      "abstract": "Establishes a Hiring Pilot Program within the Department of Health, which includes an amended hiring procedure for delegated position classifications, certain flexibilities regarding minimum qualifications for positions having a salary range at or below SR-10, the ability to directly hire certain individuals into a civil service position if certain conditions are met, and the authority to make certain temporary appointments at the merited civil service pay scale without step limitation.  Applies to recruitments initiated before 7/1/2028.  Requires annual reports to the Legislature.  Sunsets 7/1/2028.  (CD1)"
    }
  ],
