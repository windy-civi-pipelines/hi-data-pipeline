  "identifier": "SB525",
  "title": "RELATING TO MANDATORY PRIOR WRITTEN NOTICE AND CONSENT IN CONTRACTS TO PROVIDE CREMATION SERVICES.",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
  ],
  "subject": [
    "Cemetery and Funeral Trusts",
    "Consent",
    "Cremation",
